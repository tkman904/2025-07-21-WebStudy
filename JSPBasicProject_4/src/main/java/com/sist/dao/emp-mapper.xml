<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.dao.emp-mapper">
  <resultMap type="com.sist.vo.EmpVO" id="empMap">
    <result column="dname" property="dvo.dname"/>
    <!--
    	vo.getDvo().setDname(rs.getString("dname"))
    	SELECT dname, loc, ename ...
    	vo.setDname()
    	vo.setLoc()
    	vo.setEname() 
     -->
    <result column="loc" property="dvo.loc"/>
  </resultMap>
  <select id="empdeptJoinData" resultMap="empMap">
    SELECT empno, ename, job, TO_CHAR(hiredate, 'YYYY-MM-DD') as dbday,
    		sal, dname, loc
    FROM emp, dept
    WHERE emp.deptno=dept.deptno
  </select>
</mapper>